task default: :welcome

desc 'welcoming task'
task :welcome do
  puts 'Welcome to Mini Ruby Projects! =)',
        'Please, choose one of projects by typing \'rake [project_name]\'',
        'available projects: hangman, diary'
end

desc 'launch hangman project'
task :hangman do
  ruby './hangman/main.rb'
end

desc 'launch diary project'
task :diary do
  ruby './diary/main.rb'
end
